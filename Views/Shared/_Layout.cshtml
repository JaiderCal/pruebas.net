<div class="anouncement_section clr" style="display: none;">
                <div class="sub_row_container anouncement_desc">
                    <div class="anouncement_content col">
                        <div class=" col sub_row heading">
                            <div class="col span_1" style="padding: 1px;"></div>
                            <div class="col span_5">@Resources.SelfServicePortalResources.Title</div>
                            <div class="col span_7">@Resources.SelfServicePortalResources.ExpiryDate</div>
                            <div class="col span_13">@Resources.SelfServicePortalResources.Description</div>
                        </div>
                        @{
                            foreach (Dictionary<string, object> listEntry in announcements)
                            {
                                // System.Windows.Forms.RichTextBox rtBox = new System.Windows.Forms.RichTextBox();
                                // rtBox.Rtf = (string)listEntry["Body"];
                                string body = listEntry["Body"] as string;
                                string cssClass = "";
                                string altTxt = "";
                                if (listEntry["Priority"].ToString().Contains("Critical"))
                                {
                                    cssClass = "icon-red";
                                    altTxt = "Critical";
                                }
                                else if (listEntry["Priority"].ToString().Contains("Medium"))
                                {
                                    cssClass = "icon-orange";
                                    altTxt = "Medium";
                                }
                                else if (listEntry["Priority"].ToString().Contains("Low"))
                                {
                                    cssClass = "icon-yellow";
                                    altTxt = "Low";
                                }
                        
                            <div class="row sub_row">
                                <div class="col span_1"><span class="icon-selfmade @cssClass"></span></div>
                                <div class="col span_5">@listEntry["Title"]</div>
                                <div class="col span_7"> <span class="utc-date">@DateTime.Parse(listEntry["ExpirationDate"].ToString()).ToString("yyyy,M,d,H,m,s")</span></div>
                                <div class="col span_13">@body</div>
                            </div>
                    
                   
                        }
                        }
                    </div>

                </div>

            </div>

