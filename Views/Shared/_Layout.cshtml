            <form method="post" action="~/Home/GenericSearch" id="global_search_form">
                <input name="searchString" class="global_search" type="search" placeholder="@Resources.SelfServicePortalResources.SearchPlaceHolder" style="width : 94%;" />
            </form>
        </div>

    </div>
